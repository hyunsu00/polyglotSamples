{
    // 자세한 내용을 보려면 https://code.visualstudio.com/docs/cpp/c-cpp-properties-schema-reference 참고
    "configurations": [
        {
            // 구성을 식별하는 친숙한 이름
            // VS Code의 상태 표시 줄에는 활성화 된 구성이 표시
            "name": "Linux",
            // 포함 경로 설정
            "includePath": [
                // ${workspaceFolder}포함 모든 하위 폴더 재귀적 검색
                "${workspaceFolder}/**"
            ],
            // 파일을 구문 분석하는 동안 사용할 IntelliSense 엔진의 전 처리기 정의 목록
            "defines": [],
            // 프로젝트를 빌드하는 데 사용하는 컴파일러의 전체 경로
            "compilerPath": "/usr/bin/gcc",
            // IntelliSense에 사용할 C 언어 표준의 버전
            "cStandard": "gnu17",
            // IntelliSense에 사용할 C ++ 언어 표준의 버전
            "cppStandard": "gnu++14",
            //  IntelliSense 모드는 MSVC, gcc 또는 Clang의 아키텍처 별 변형에 매핑
            "intelliSenseMode": "linux-gcc-x64",
            // 소스 파일에 대한 IntelliSense 구성 정보를 제공 할 수있는 VS Code 확장의 ID
            // ms-vscode.cmake-tools :  CMake Tools 확장의 구성 정보를 제공
            "configurationProvider": "ms-vscode.cmake-tools",
            // 작업 공간 에 대한 파일 의 전체 경로
            // 이 파일에서 발견 된 포함 경로 및 정의가 includePath및 defines설정에 설정된 값 대신 사용
            "compileCommands": "${workspaceFolder}/build/compile_commands.json"
        }
    ],
    "version": 4
}