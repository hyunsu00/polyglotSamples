{
    "go.useLanguageServer": true, // 컴파일 오류를 진단하는 기능을 활성화
    "go.delveConfig": {
        "debugAdapter": "legacy", // 이전 버전의 디버그 어댑터를 사용
    },
    "go.toolsEnvVars": {
        "GO111MODULE": "on" // 모듈을 사용하여 의존성을 관리
    },
    "go.formatTool": "default", // default를 사용하여 코드를 자동으로 정리
    "go.lintTool": "golint", // golint를 사용하여 코드를 검사
    "go.vetOnSave": "workspace" // 저장할 때마다 코드를 검사
}